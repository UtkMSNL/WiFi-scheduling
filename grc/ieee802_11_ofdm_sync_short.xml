<?xml version="1.0"?>

<block>
	<name>OFDM Sync Short</name>
	<key>ieee802_11_ofdm_sync_short</key>
	<category>IEEE802.11</category>
	<import>import ieee802_11</import>
	<make>ieee802_11.ofdm_sync_short($threshold, $min_plateau, $log, $debug)</make>

	<param>
		<name>Log</name>
		<key>log</key>
		<value>False</value>
		<type>bool</type>

		<option>
			<name>Enable</name>
			<key>True</key>
		</option>
		<option>
			<name>Disable</name>
			<key>False</key>
		</option>
	</param>

	<param>
		<name>Debug</name>
		<key>debug</key>
		<value>False</value>
		<type>bool</type>

		<option>
			<name>Enable</name>
			<key>True</key>
		</option>
		<option>
			<name>Disable</name>
			<key>False</key>
		</option>
	</param>

	<param>
		<name>Threshold</name>
		<key>threshold</key>
		<value>0.8</value>
		<type>real</type>
	</param>

	<param>
		<name>Min Plateau</name>
		<key>min_plateau</key>
		<value>2</value>
		<type>int</type>
	</param>

	<check>$threshold > 0</check>
	<check>$min_plateau > 0</check>

	<sink>
		<name>in</name>
		<type>complex</type>
		<nports>1</nports>
	</sink>

	<sink>
		<name>abs</name>
		<type>complex</type>
		<nports>1</nports>
	</sink>

	<sink>
		<name>cor</name>
		<type>float</type>
		<nports>1</nports>
	</sink>

	<source>
		<name>out</name>
		<type>complex</type>
		<nports>1</nports>
	</source>

</block>
