<?xml version="1.0"?>

<block>
	<name>OFDM Mapper</name>
	<key>ieee802_11_ofdm_mapper</key>
	<category>IEEE802.11</category>
	<import>import ieee802_11</import>
	<make>ieee802_11.ofdm_mapper($encoding, $debug)</make>
	<callback>set_encoding($encoding)</callback>

	<param>
		<name>Encoding</name>
		<key>encoding</key>
		<value>ieee802_11.BPSK_1_2</value>
		<type>int</type>

		<option>
			<name>BPSK 1/2</name>
			<key>ieee802_11.BPSK_1_2</key>
		</option>
		<option>
			<name>BPSK 3/4</name>
			<key>ieee802_11.BPSK_3_4</key>
		</option>
		<option>
			<name>QPSK 1/2</name>
			<key>ieee802_11.QPSK_1_2</key>
		</option>
		<option>
			<name>QPSK 3/4</name>
			<key>ieee802_11.QPSK_3_4</key>
		</option>
		<option>
			<name>16QAM 1/2</name>
			<key>ieee802_11.16QAM_1_2</key>
		</option>
		<option>
			<name>16QAM 3/4</name>
			<key>ieee802_11.16QAM_3_4</key>
		</option>
		<option>
			<name>64QAM 2/3</name>
			<key>ieee802_11.64QAM_2_3</key>
		</option>
		<option>
			<name>64QAM 3/4</name>
			<key>ieee802_11.64QAM_3_4</key>
		</option>
	</param>

	<param>
		<name>Debug</name>
		<key>debug</key>
		<value>False</value>
		<type>bool</type>

		<option>
			<name>Enable</name>
			<key>True</key>
		</option>
		<option>
			<name>Disable</name>
			<key>False</key>
		</option>
	</param>

	<check>$encoding in range(8)</check>

	<sink>
		<name>in</name>
		<type>message</type>
	</sink>

	<source>
		<name>out</name>
		<type>byte</type>
		<nports>1</nports>
	</source>

</block>
